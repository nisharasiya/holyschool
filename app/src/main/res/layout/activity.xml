<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="horizontal"
                android:weightSum="2">




                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/homeworkll"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/homework"
                    android:layout_weight="1">



                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/diary"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="80dp"
                        android:src="@drawable/icon_homework"/>

                    <TextView
                        android:layout_below="@+id/diary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:text="HomeWork"
                        android:textColor="@color/White"
                        android:textSize="18sp" />




                </LinearLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:id="@+id/attll"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/attendabnce"
                    android:layout_weight="1">



                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="80dp"
                        android:src="@drawable/attt"/>

                    <TextView
                        android:layout_below="@+id/diary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:text="Attendance"
                        android:textColor="@color/White"
                        android:textSize="18sp" />




                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="horizontal"
                android:weightSum="2">




                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/feell"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/payment"
                    android:layout_weight="1">



                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="80dp"
                        android:id="@+id/ghnta"
                        android:src="@drawable/icon_payment"/>

                    <TextView
                        android:layout_below="@+id/diary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:text="Fee Reciept"
                        android:textColor="@color/White"
                        android:textSize="18sp" />




                </LinearLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:id="@+id/transportll"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/notice"
                    android:layout_weight="1">



                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/imageView33"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="80dp"
                        android:src="@drawable/bus"/>

                    <TextView
                        android:layout_below="@+id/diary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:text="Transport"
                        android:textColor="@color/White"
                        android:textSize="18sp" />




                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>











</RelativeLayout>